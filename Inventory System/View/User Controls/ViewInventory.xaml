<UserControl x:Class="Inventory_System.View.User_Controls.ViewInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory_System.View.User_Controls"
             mc:Ignorable="d" 
             Height="380" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Current Inventory:" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.20*"/>
                <!-- Index Column : 1 -->
                <ColumnDefinition Width="0.40*"/>
                <!-- Name Column : 2 -->
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Text="Index Value" Foreground="White" FontSize="18" HorizontalAlignment="Center" Panel.ZIndex="1"/>
            <TextBlock Grid.Column="2" Text="Name of the Item" Foreground="White" FontSize="18" HorizontalAlignment="Center" Panel.ZIndex="1"/>

            <ListView x:Name="index_IL" Grid.Column="1" Background="DarkGray"/>
            <ListView x:Name="name_IL" Grid.Column="2" Background="DarkGray"/>
        </Grid>
    </Grid>
</UserControl>
